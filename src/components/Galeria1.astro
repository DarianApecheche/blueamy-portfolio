---
// components/GalleryBeforeAfter.astro
---

<section id="galeria" class="w-full px-5 py-12">
  <h2 class="text-4xl font-serif text-center text-blue-800 mb-10">Transformaciones</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-4xl mx-auto">
    <!-- Card Before/After -->
    <div class="relative w-full h-64 overflow-hidden rounded-2xl shadow-lg group">
      <img src="/antes.jpg" alt="Antes" class="absolute inset-0 w-1/2 h-full object-cover" />
      <img src="/despues.jpg" alt="Después" class="absolute inset-y-0 right-0 w-1/2 h-full object-cover" />

      <!-- Línea divisoria -->
      <div class="absolute inset-y-0 left-1/2 w-0.5 bg-white/80"></div>

      <!-- Overlay con texto -->
      <div class="absolute top-2 left-2 bg-black/40 text-white text-xs px-2 py-1 rounded">Antes</div>
      <div class="absolute top-2 right-2 bg-blue-600/80 text-white text-xs px-2 py-1 rounded">Después</div>
    </div>

    <!-- Otro Before/After -->
    <div class="relative w-full h-64 overflow-hidden rounded-2xl shadow-lg group">
      <img src="/antes.jpg" alt="Antes" class="absolute inset-0 w-1/2 h-full object-cover" />
      <img src="/despues.jpg" alt="Después" class="absolute inset-y-0 right-0 w-1/2 h-full object-cover" />
      <div class="absolute inset-y-0 left-1/2 w-0.5 bg-white/80"></div>
      <div class="absolute top-2 left-2 bg-black/40 text-white text-xs px-2 py-1 rounded">Antes</div>
      <div class="absolute top-2 right-2 bg-blue-600/80 text-white text-xs px-2 py-1 rounded">Después</div>
    </div>
  </div>
</section>
