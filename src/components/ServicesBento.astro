---
// components/ServicesBento.astro
---

<section id="servicios" class="w-full px-5 py-12">
  <h2 class="text-4xl font-serif text-center text-blue-800 mb-10">Servicios</h2>

  <div class="grid grid-cols-2 gap-4 max-w-3xl mx-auto">
    <!-- Item grande -->
    <div class="col-span-2 bg-gradient-to-r from-[#c9fadc]/70 to-[#9ac1fc]/70 rounded-2xl p-6 shadow-lg flex flex-col justify-center items-center text-center hover:scale-105 transition">
      <h3 class="text-xl font-semibold text-blue-900 mb-2">Manicura Premium</h3>
      <p class="text-sm text-blue-800">Con productos premium y diseños exclusivos</p>
      <span class="mt-2 font-bold text-blue-900">$40</span>
    </div>

    <!-- Item pequeño -->
    <div class="bg-white/40 backdrop-blur-md rounded-2xl p-4 shadow-md flex flex-col justify-between hover:scale-105 transition">
      <h3 class="font-semibold text-blue-800">Uñas Acrílicas</h3>
      <span class="text-blue-600 font-bold mt-2">$35</span>
    </div>

    <!-- Item pequeño -->
    <div class="bg-white/40 backdrop-blur-md rounded-2xl p-4 shadow-md flex flex-col justify-between hover:scale-105 transition">
      <h3 class="font-semibold text-blue-800">Diseño Personalizado</h3>
      <span class="text-blue-600 font-bold mt-2">$25</span>
    </div>
  </div>
</section>
