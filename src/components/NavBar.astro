---
// components/NavBar.astro
---

<nav class="bg-gradient-to-br from-blue-950 to-gray-800 text-white sticky top-0 z-[200] transform transition-transform duration-300 ease-in-out translate-y-0" id="navbar">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 px-6">
    <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
        <span class="self-center text-4xl font-sacramento whitespace-nowrap hover:text-blue-200 transition">Blue Amy</span>
    </a>
    <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-300 rounded-lg md:hidden hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-700 rounded-lg bg-gray-900 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-transparent">
        <li>
          <a href="#about" class="block py-2 px-3 text-white rounded-sm hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 transition">Sobre Mí</a>
        </li>
        <li>
          <a href="#prices" class="block py-2 px-3 text-white rounded-sm hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 transition">Lista de Precios</a>
        </li>
        <li>
          <a href="#gallery" class="block py-2 px-3 text-white rounded-sm hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 transition">Galería</a>
        </li>
        <li>
          <a href="#contact" class="block py-2 px-3 text-white rounded-sm hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-200 md:p-0 transition">Contáctame</a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Script para toggle del menú mobile y comportamiento de scroll -->
  <script>
  document.addEventListener('DOMContentLoaded', () => {
    // Toggle menú mobile
    const btn = document.querySelector('[data-collapse-toggle="navbar-default"]');
    const menu = document.getElementById('navbar-default');
    const navbar = document.getElementById('navbar');

    // Verificar que los elementos existan
    if (btn && menu && navbar) {
      // Toggle menú mobile
      btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });

      // Comportamiento de scroll
      let lastScroll = 0;
      window.addEventListener('scroll', () => {
        const currentScroll = window.pageYOffset;
        if (currentScroll > lastScroll && currentScroll > 100) {
          // Scroll hacia abajo, oculta navbar
          navbar.style.transform = 'translateY(-100%)';
        } else {
          // Scroll hacia arriba, muestra navbar
          navbar.style.transform = 'translateY(0)';
        }
        lastScroll = currentScroll;
      });
    }else{
        console.log('err')
    }
  });
</script>
</nav>